@model MusicTool.Models.DTO.AddSingerRequest
@{
    ViewData["Title"] = "Create singer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    <link href="~/css/CreateSinger.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container">
    <h3 class="title">Thêm ca sĩ</h3>
    <div class="create">
        <form id="create-singer" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Tên ca sĩ</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="err-validation"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Hình ảnh</label>
                <input class="form-control" type="file" name="PhotoName" id="PhotoName">
                <span asp-validation-for="PhotoName" class="err-validation"></span>
            </div>
            <div class="function-btn">
                <a class="btn btn-primary" asp-action="Index">Quay lại</a>
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </div>
        </form>
    </div>
</div>